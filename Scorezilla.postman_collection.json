{
  "info": {
    "name": "Scorezilla Highscore API",
    "description": "Postman collection for testing Scorezilla Highscore API endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Highscores",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/.netlify/functions/scores?gameId=game1&limit=5",
          "host": ["{{baseUrl}}"],
          "path": [".netlify", "functions", "scores"],
          "query": [
            { "key": "gameId", "value": "game1" },
            { "key": "limit", "value": "5" }
          ]
        }
      }
    },
    {
      "name": "Add Highscore",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"gameId\": \"game1\",\n  \"name\": \"Alice\",\n  \"score\": 1234\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/.netlify/functions/scores",
          "host": ["{{baseUrl}}"],
          "path": [".netlify", "functions", "scores"]
        }
      }
    },
    {
      "name": "Update Highscore",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"gameId\": \"game1\",\n  \"id\": \"GUID\",\n  \"name\": \"Alice\",\n  \"score\": 1500\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/.netlify/functions/scores",
          "host": ["{{baseUrl}}"],
          "path": [".netlify", "functions", "scores"]
        }
      }
    },
    {
      "name": "Remove Highscore",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/.netlify/functions/scores?gameId=game1&id=GUID",
          "host": ["{{baseUrl}}"],
          "path": [".netlify", "functions", "scores"],
          "query": [
            { "key": "gameId", "value": "game1" },
            { "key": "id", "value": "GUID" }
          ]
        }
      }
    },
    {
      "name": "Check Highscore Qualification",
      "request": {
        "method": "OPTIONS",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"gameId\": \"game1\",\n  \"score\": 1200\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/.netlify/functions/scores",
          "host": ["{{baseUrl}}"],
          "path": [".netlify", "functions", "scores"]
        }
      }
    },
    {
      "name": "Obtain JWT",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/.netlify/functions/auth",
          "host": ["{{baseUrl}}"],
          "path": [".netlify", "functions", "auth"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://<yoursite>.netlify.app"
    }
  ]
}
